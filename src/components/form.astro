---
export interface Props {
  col: string;
  butCol: string;
}

const { col, butCol } = Astro.props;
---

<style define:vars={{ col, butCol }}>
	.body-receipt {
        height: unset;
		padding-bottom: 5rem;
		background-color: var(--col);
	}

    .body-container {
        padding: 0 1.5rem;
        max-width: calc(900px + 1.5rem);
    }

    form > button {
		margin-top: 1rem;
		background-color: var(--butCol);
		color: var(--light-text);
		font-size: var(--font-h3);
		padding: 0 calc(var(--font-h2) * 0.75);
		line-height: calc(var(--font-h2) * 1.5);
		transition: calc(var(--trans-time) / 2) ease;
	}

	form > button:hover {
		background-color: var(--light-text);
		color: var(--butCol);
	}

    input[type='text']:focus,
    textarea:focus {
        border: 3px solid var(--butCol);
        outline: none;
    }
</style>

<div class="body-receipt dev-body-block">
    <div class="body-container">
        <h1>Say Hi!</h1>
        <form action="https://api.web3forms.com/submit" method="POST" class="contact-form" id="form">
            <input type="hidden" name="access_key" value="271f1227-2a9a-46bf-8523-2c77de6160db">
            
            <label for="name">Name</label>
            <input type="text" id="name" name="name" placeholder="Name / Contact" value="" required/>
            <label for="subject">Subject</label>
            <input type="text" id="subject" name="subject" placeholder="Subject" value="" />
            <label for="email">Email</label>
            <input type="text" id="email" name="email" placeholder="user@example.com" value="" />
            <label for="message">Message</label>
            <textarea rows="6" id="body" name="message" placeholder="Tell me more!" required/>

            <div class="h-captcha fix-captcha" data-captcha="true"></div>

            <button type="submit" id="submit">Send</button>
        </form>
    </div>
</div>

<script is:inline src="https://web3forms.com/client/script.js" async defer></script>