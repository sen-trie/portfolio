<style define:vars={{ fg, bg }}>
    .body-footer {
        height: fit-content;
        overflow: hidden;
        padding-top: 0.5rem;
        padding-bottom: 0.5rem;
        background: var(--bg);
    }

    .body-footer > .body-container {
        max-width: calc(1100px + 1.5rem) !important;
        flex-direction: row;
        justify-content: space-around;
    }

    .body-footer p {
        width: fit-content;
        color: var(--fg);
    }

    @media (max-width: 992px) {
        .body-footer > .body-container {
            flex-direction: column;
        }
    }
</style>