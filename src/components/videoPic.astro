---
const { img, dim, vid, webm, ogg } = Astro.props;
---
<style is:global>
    .art-grid-div video {
		height: inherit;
		width: auto;
        cursor: pointer;
	}
</style>

<div class="art-grid-div art-grid-item art-short">
    <video width={dim[0]} height={dim[1]} controls playsinline preload="metadata" poster={img}>
        <source src={`${vid}#t=0.3`} type="video/mp4">
        <source src={`${ogg}#t=0.3`} type="video/ogg">
        <source src={`${webm}#t=0.3`} type="video/webm">
        Your browser does not support the video tag.
    </video>
    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-hand-click" width="72" height="72" viewBox="0 0 24 24" stroke-width="1" stroke="#eed695" fill="none" stroke-linecap="round" stroke-linejoin="round">
        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
        <path d="M8 13v-8.5a1.5 1.5 0 0 1 3 0v7.5" />
        <path d="M11 11.5v-2a1.5 1.5 0 0 1 3 0v2.5" />
        <path d="M14 10.5a1.5 1.5 0 0 1 3 0v1.5" />
        <path d="M17 11.5a1.5 1.5 0 0 1 3 0v4.5a6 6 0 0 1 -6 6h-2h.208a6 6 0 0 1 -5.012 -2.7l-.196 -.3c-.312 -.479 -1.407 -2.388 -3.286 -5.728a1.5 1.5 0 0 1 .536 -2.022a1.867 1.867 0 0 1 2.28 .28l1.47 1.47" />
        <path d="M5 3l-1 -1" />
        <path d="M4 7h-1" />
        <path d="M14 3l1 -1" />
        <path d="M15 6h1" />
    </svg>
</div>