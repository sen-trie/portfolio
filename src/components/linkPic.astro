---
import Image from 'astro/components/Image.astro';
export interface Props {
  url: string;
  dim: Array<number>;
  img: ImageMetadata;
}

const { url, dim, img } = Astro.props;
---

<style is:global>
    .art-grid-div > div {
        position: relative;
    }

    .art-grid-div img {
		height: inherit;
		width: auto;
	}

	.art-grid-div svg {
        transform-origin: bottom right;
		position: absolute;
		top: 2%;
		right: 1%;
		filter: drop-shadow(0 0 0.2rem #eed695);
        background-color: rgba(0, 0, 0, 0.5);
		border-radius: 1rem;
	}

    @media (max-width: 992px) {
        .art-grid-div svg {
            transform: scale(0.75);
        }
    }

    @media (max-width: 768px) {
        .art-grid-div svg {
            transform: scale(0.5);
        }
    }
</style>

<a class="art-grid-div art-grid-item" href={ url } target="_blank">
    <div>
        <Image src={ img } loading="lazy" width={dim[0]} height={dim[1]} alt=''/>
        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-external-link" width="72" height="72" viewBox="0 0 24 24" stroke-width="1" stroke="#eed695" fill="none" stroke-linecap="round" stroke-linejoin="round">
            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
            <path d="M12 6h-6a2 2 0 0 0 -2 2v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2 -2v-6" />
            <path d="M11 13l9 -9" />
            <path d="M15 4h5v5" />
          </svg>
    </div>
</a>