---
export interface Props {
    img: ImageMetadata;
    dim: Array<number>;
    url: string;
}

const { url, dim, img } = Astro.props;
---

<style is:global>
    .art-grid-div > div {
        position: relative;
    }

    .art-grid-div img {
		height: inherit;
		width: auto;
	}

	.art-grid-div svg {
        transform-origin: bottom right;
		position: absolute;
		top:8px;
		right:8px;
        padding: 4px;
		filter: drop-shadow(0 0 0.2rem #eed695);
        background-color: rgba(0, 0, 0, 0.5);
		border-radius: 1rem;
        pointer-events: none;
	}

    iframe {
        height: 100%;
        width: 100%;
    }

    @media (max-width: 992px) {
        .art-grid-div svg {
            transform: scale(0.75);
        }
    }

    @media (max-width: 768px) {
        .art-grid-div svg {
            transform: scale(0.5);
        }
    }
</style>

<a class="art-grid-div art-grid-item art-video" href={ url } target="_blank">
    <iframe 
        src={url}
        title="YouTube video player" 
        frameborder="0" 
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" 
        referrerpolicy="strict-origin-when-cross-origin" 
        allowfullscreen
    >
    </iframe>
</a>
