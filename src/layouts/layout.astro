---
import { ViewTransitions } from 'astro:transitions';
const { title } = Astro.props;
---

<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title> { title } </title>
        <ViewTransitions />
    </head>
    <body transition:animate="fade"> 
        <slot />
    </body>
</html>
